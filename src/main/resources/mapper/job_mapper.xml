<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.jobx_batch.dao.JobDao">

    <insert id="insertJob" parameterType="com.example.jobx_batch.dto.JobInfoDto">
        INSERT INTO jobs (job_id, name, description)
        VALUES (#{jobId}, #{name}, #{description})
    </insert>

</mapper>